{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Inspire Metadata",
    "description": "This is the blueprint of the metadata block specific for the Inspire community",
    "type": "object",
    "properties": {
        
        "Keyword_inspire": {
            "title": "Keyword INSPIRE",
            "description": "Keyword INSPIRE description",
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["Addresses","Administrative Units",
					"Cadastral parcels","Coordinate reference systems",
					"Geographical grid systems","Geographical names",
					"Hydrography","Protected sites","Transport networks",
					"Elevation",
					"Geology",
					"Land cover",
					"Orthoimagery",
					"Agricultural and aquaculture facilities",
					"Area management / restriction / regulation zones & reporting units",
					"Atmospheric conditions",
					"Bio-geographical regions",
					"Buildings",
					"Energy Resources",
					"Environmental monitoring Facilities",  
					"Habitats and biotopes",
					"Human health and safety",      
					"Land use",
					"Meteorological geographical features",
					"Mineral Resources",
					"Natural risk zones",
					"Oceanographic geographical features",
					"Population distribution and demography",
					"Production and industrial facilities",
					"Sea regions",
					"Soil",
					"Species distribution",
					"Statistical units",
					"Utility and governmental services"]
            }
        },
		"Topic_category": {
			"title":"Topic Category INSPIRE",
			"description":"Topic Category INSPIRE description",
			"type":"array",
			"items": {
				"type":"string",
				"enum":[
					"farming",
					"biota",
					"boundaries",
					"climatologyMeteorologyAtmosphere",
					"economy",
					"elevation",
					"environment",
					"geoscientificInformation",
					"health",
					"imageryBaseMapsEarthCover",
					"intelligenceMilitary",
					"inlandWaters",
					"location",
					"oceans",
					"planningCadastre",
					"society",
					"structure",
					"transportation",
					"utilitiesCommunication"					
				]
			}
		},
		"start-date": {
			"title": "Start date",
			"description" : "Temporal reference - start date",
			"type":"string",
			"format":"date-time"
		},
		"end-date": {
			"title": "End date",
			"description" : "Temporal reference - end date",
			"type":"string",
			"format":"date-time"
		},
		"lat_max": {
		        "description": "Maximum latitude of the dataset", 
		        "title": "Latitude Max", 
		        "type": "string"
		      }, 
		"lat_min": {
		        "description": "Minimum latitude of the dataset", 
		        "title": "Latitude Min", 
		        "type": "string"
		}, 
		"lon_max": {
		        "description": "Maximum longitude of the dataset", 
		        "title": "Longitude Max", 
		        "type": "string"
		}, 
		"lon_min": {
		        "description": "Minimum longitude of the dataset", 
		        "title": "Longitude Min", 
		        "type": "string"
		}, 
		"resolution_cm":{
			"title":"resolutions (pixels/cm2)",
			"description":"Available resolutions in pixels per cm2",
			"type":"array",
			"items":{
				"type":"integer"
			}
		},
		"resolution_inch":{
			"title":"resolutions (pixels/inch)",
			"description":"Available resolutions in pixels per inch",
			"type":"array",
			"items":{
				"type":"integer"
			}
		},
		"lineage":{
	        "description": "Lineage", 
	        "title": "Lineage", 
	        "type": "string"		
		}
    },
    "additionalProperties": false,
    "b2share": {
        "presentation": {
            "major": [ "Keyword_inspire", "Topic_category", "start_date"
				, "end_date", "lat_min","lon_min","lat_max","lon_max","resolution_cm","resolution_inch","lineage"]
        }
	}
}